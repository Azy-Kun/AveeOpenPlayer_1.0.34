<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <TextView
        android:id="@+id/txtBarTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:clickable="false"
        android:text="0"
        android:textColor="@color/black_alpha_1"
        android:textSize="@dimen/textSizeM3" />
    <com.aveeopen.Common.VerticalSeekBar
        android:id="@+id/seekBarVolume"
        android:layout_width="50dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtBarTop"
        android:max="1000"
        android:maxHeight="1000dp"
        />
    <TextView
        android:id="@+id/txtBarBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seekBarVolume"
        android:padding="4dp"
        android:gravity="center_horizontal"
        android:clickable="false"
        android:text="0"
        android:textColor="@color/black_alpha_1"
        android:textSize="@dimen/textSizeM4" />

</RelativeLayout>
