<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/listItemBackground"
    android:orientation="vertical"
    android:padding="0dp">

    <!--Comment this control out to disable ads on list view bottom ; APP RESKIN -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        ads:adSize="LARGE_BANNER"
        ads:adUnitId="@string/ads_footer_banner_ad_unit_id"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/player_controls_height_max"
        android:padding="0dp">

        <TextView
            android:id="@+id/textInfo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/design_height_0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingLeft="0dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color_m1"
            android:textSize="@dimen/textSizeM1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textInfoItems"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/design_height_0"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:padding="12dp"
            android:paddingLeft="0dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color_m2"
            android:textSize="@dimen/textSizeM2"
            android:visibility="visible" />
    </RelativeLayout>

    <View
        android:id="@+id/navbar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>
